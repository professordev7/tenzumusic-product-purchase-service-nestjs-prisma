generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./tenzumusic-product-purchase-service-db.db"
}

model User {
  id                    String   @id 
  first_name            String
  last_name             String
  email                 String
  password              String   @unique
  age                   Int
  purchased_products    String
}

model Product {
  id     String     @id 
  name   String
  stock  Int
  price  Int
  date   DateTime   @default(now())
}